{% extends 'base.html.twig' %}
{% form_theme formProject 'bootstrap_4_layout.html.twig' %}
{% block body %}

<h1>Ajout d'un projet</h1>
{{ form_start(formProject)}}

{{ form_row(formProject.Title, {'attr': {
                            'placeholder': 'Titre du projet'
}})}}

{{ form_row(formProject.Description, {'attr': {
                            'placeholder': 'Description'
}})}}

{{ form_row(formProject.Image, {'attr': {
                            'placeholder': 'Image'
}})}}

{{ form_row(formProject.Github, {'attr': {
                            'placeholder': 'GitHub du projet'
}})}}

{{ form_row(formProject.Weblink, {'attr': {
                            'placeholder': 'Url du projet'
}})}}
<button type="submit" class="btn btn-primary">Ajouter le projet</button>

{{ form_end(formProject)}}

{% endblock %}
